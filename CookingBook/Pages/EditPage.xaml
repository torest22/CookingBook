<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xx="clr-namespace:CookingBook.Models"
             x:Class="CookingBook.Pages.EditPage"
             
             Title="EditPage">
    <VerticalStackLayout Spacing="20">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Frame>
            <HorizontalStackLayout>
                <Label Text="Name" x:Name="lableName" />
                <Entry x:Name="entryName" />
            </HorizontalStackLayout>
            
        </Frame>

        <Frame>
            <HorizontalStackLayout>
                <Label Text="Desctipion :"/>
                <Entry x:Name="entryDescr"  />
            </HorizontalStackLayout>
           
        </Frame>

        <Button x:Name="btnDelete" Text="Delete" Clicked="btnDelete_Clicked" />
        <Button x:Name="btnUpDate" Text="UpDate Recipe" Clicked="btnUpDate_Clicked"/>
    </VerticalStackLayout>
</ContentPage>