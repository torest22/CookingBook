<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookingBook.Pages.AddPage"
             Title="AddPage">
    <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Frame 
                Grid.Row="0">
                <HorizontalStackLayout>
                    <Label 
                        Text="Name"/>
                    <Entry 
                        x:Name="entyName"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame
                Grid.Row="1">
                <HorizontalStackLayout>
                    <Label
                        Text="Decription"/>
                    <Editor
                        x:Name="entryDesr"/>
                </HorizontalStackLayout>
            </Frame>

            <Button Grid.Row="3"
                x:Name="btnAdd"
                Text="Add recipe"
                Clicked="btnAdd_Clicked"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>