<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookingBook.Pages.FistPage"
             Title="FistPage">
    <VerticalStackLayout BackgroundColor="DarkGoldenrod">
        <Image Source="book.png"  
               HeightRequest="150"
               WidthRequest="150"/>
        <Label Text="Welcom to Cooking book, you can added recipe to recipe book and random open recipe"
               FontFamily="BalsamiqItalic"
               FontSize="20"
               TextColor="Black"/>
        <Label Text="Enjoy"
               FontFamily="BalsamiqItalic"
               FontSize="25"
               TextColor="Black"/>
        <Button x:Name="btnRecipe"
                Text="Open recipe"
                Clicked="btnRecipe_Clicked"              
                />
        <Button x:Name="btnRandom" 
                Text="Go to random" 
                Clicked="btnRandom_Clicked"/>
       

    </VerticalStackLayout>
</ContentPage>