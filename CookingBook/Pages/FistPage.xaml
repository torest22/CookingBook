<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookingBook.Pages.FistPage"
             Title="FistPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI! Cooking book"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Button x:Name="btnRecipe"
                Text="Open recipe"
                Clicked="btnRecipe_Clicked"/>
        <Button x:Name="btnRandom" 
                Text="Go to random" 
                Clicked="btnRandom_Clicked"/>
        <Button x:Name="btnRnd"
                Text="Go to random"
                Clicked="btnRnd_Clicked"/>
    </VerticalStackLayout>
</ContentPage>