<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookingBook.Pages.ListPage"
             Title="ListPage">
    <VerticalStackLayout
         BackgroundColor="DarkGoldenrod">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ListView 
                x:Name="RecipeList"
                ItemSelected="RecipeList_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <ViewCell>
                            <StackLayout>
                                <Label 
                                    Text="{Binding Name}"
                                    FontSize="32"
                                    FontFamily="BalsamiqItalic"
                                    TextColor="Black"/>                               
                            </StackLayout>
                          
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Button Grid.Row="1"
                x:Name="btnAddRecipe"
                Text="Add recipe" 
                Clicked="btnAddRecipe_Clicked"/>
        </Grid>

      
    </VerticalStackLayout>
</ContentPage>